<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>

<SplitPane fx:id="root" dividerPositions="0.3" xmlns:fx="http://javafx.com/fxml" fx:controller="kz.sab1tm.juggler.MainController">
    <!-- Left side -->
    <VBox>
        <!-- Actions -->
        <AnchorPane>
            <ComboBox fx:id="leftActionSelectTheme" AnchorPane.topAnchor="15.0" AnchorPane.leftAnchor="5.0"
                      AnchorPane.bottomAnchor="15.0" onAction="#onThemeChange">
                <!-- Theme selector -->
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Dark"/>
                        <String fx:value="Light"/>
                    </FXCollections>
                </items>
                <!-- Selected theme -->
                <value>Dark</value>
            </ComboBox>
            <Button fx:id="leftActionImportButton" text="Import" AnchorPane.topAnchor="15.0"
                    AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="15.0"/>
        </AnchorPane>

        <!-- API tree -->
        <TreeView fx:id="leftRequestList" maxHeight="1.0"/>
    </VBox>

    <!-- Right side -->
    <StackPane>

    </StackPane>
</SplitPane>